/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [],
    "baseUrl": "./src",
    "paths": {
      "@constants/*": [
        "./app/constants/*"
      ],
      "@components/*": [
        "./app/components/*"
      ],
      "@directives/*": [
        "./app/directives/*"
      ],
      "@env/*": [
        "./environments/*"
      ],
      "@models/*": [
        "./app/models/*"
      ],
      "@services/*": [
        "./app/services/*"
      ],
      
      "@states/*": [
        "./app/state-management/*"
      ]
    }
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}